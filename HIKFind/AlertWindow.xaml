<Window x:Class="HIKFind.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HIKFind"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="Alert" FontFamily="Rubik">
    <Grid>
        <StackPanel>
            <Image Source="Images/warning.png" Width="32"></Image>
            <Border BorderBrush="Orange" BorderThickness="3" Margin="2">
                <TextBlock FontSize="20" x:Name="InfoText" Text="Example" Margin="10,0,10,10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Button Content="Zavřít" Width="100" Margin="0,0,0,5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
